<div class="row">
    <div class="card col-md-6 offset-md-3 shadow-sm"
        style="padding: 2rem; border-radius: .8rem; margin-bottom: 16px;">
        <!-- page header -->
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h2>Sign Up</h2>
        </div>

        <form action="/api/users" method="post">
            {{>_errors}}
            <div class="form-group mb-2">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" value="{{form.name}}"
                    placeholder="Enter name">
            </div>
            <div class="form-group mb-2">
                <label for="email">Email address</label>
                <input type="email" class="form-control" id="email" name="email" value="{{form.email}}"
                    placeholder="Email address">
                <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                    else.</small> -->
            </div>
            <div class="form-group mb-3">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password">
            </div>

            <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
            <a class="btn btn-outline-primary btn-block" href="/login">Login</a>
        </form>
    </div>
</div>