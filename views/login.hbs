<div class="row">
    <div class="card col-md-6 offset-md-3 shadow-sm"
        style="padding: 2rem; border-radius: .8rem; margin-bottom: 16px;">
        <!-- page header -->
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h2>Login</h2>
        </div>
        {{>_banner}}
        <form action="/api/users/login" method="post">
            {{>_errors}}
            <div class="form-group mb-2">
                <label for="email">Email address</label>
                <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp"
                    placeholder="Enter email" value="{{ form.email }}">
                <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                    else.</small> -->
            </div>
            <div class="form-group mb-3">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password">
            </div>

            <button type="submit" class="btn btn-primary btn-block">Login</button>
            <a class="btn btn-outline-primary btn-block" href="/signup">Sign Up</a>
        </form>
    </div>
</div>
